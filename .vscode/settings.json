{
  "[cpp]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": { "source.fixAll.stylelint": true }
  },
  "[glsl]": { "editor.defaultFormatter": "raczzalan.webgl-glsl-editor" },
  "[fs]": { "editor.defaultFormatter": "raczzalan.webgl-glsl-editor" },
  "[vs]": { "editor.defaultFormatter": "raczzalan.webgl-glsl-editor" },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": { "source.organizeImports": true }
  },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,
      "source.fixAll.eslint": true
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,
      "source.fixAll.eslint": true
    }
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[noformat]": {
    "editor.formatOnSave": false
  },
  "css.validate": false,
  "editor.formatOnSave": true,
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.associations": {
    "*.ejs": "html",
  },
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "prettier.configPath": ".prettierrc.js",
  "python.formatting.blackArgs": ["--line-length=80"],
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "testExplorer.codeLens": true,
  "tailwindCSS.codeActions": false,
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "extraClassName",
    "extraClassNames"
  ],
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**",
    "*.ts"
  ]
}
